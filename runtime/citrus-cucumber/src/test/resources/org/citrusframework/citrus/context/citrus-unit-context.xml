<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="httpClient" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="org.citrusframework.citrus.http.client.HttpClient"/>
  </bean>

  <bean id="dockerClient" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="org.citrusframework.citrus.docker.client.DockerClient"/>
  </bean>

  <bean id="seleniumBrowser" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="org.citrusframework.citrus.selenium.endpoint.SeleniumBrowser"/>
  </bean>

  <!-- Text equals message validator -->
  <bean id="textEqualsMessageValidator" class="org.citrusframework.citrus.cucumber.integration.TextEqualsMessageValidator"/>

</beans>
