<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	 
    <bean id="schemaRepository" class="org.citrusframework.citrus.xml.XsdSchemaRepository"/>
    
    <bean id="citrusHandlerInterceptor" class="org.citrusframework.citrus.http.interceptor.DelegatingHandlerInterceptor"/>
    <bean id="citrusHttpMessageController" class="org.citrusframework.citrus.http.controller.HttpMessageController"/>

    <bean id="citrusUrlHandlerMapping" class="org.citrusframework.citrus.websocket.handler.WebSocketUrlHandlerMapping">
      <property name="order" value="1" />
    </bean>

    <bean id="citrusHandshakeHandler" class="org.springframework.web.socket.server.support.DefaultHandshakeHandler">
      <constructor-arg ref="upgradeStrategy"/>
    </bean>

    <bean id="upgradeStrategy" class="org.springframework.web.socket.server.jetty.JettyRequestUpgradeStrategy"/>

</beans>
